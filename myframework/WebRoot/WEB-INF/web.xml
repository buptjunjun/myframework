<?xml version="1.0" encoding="UTF-8"?>
<web-app>

	<display-name>post</display-name>
	<filter>
		<filter-name>launch</filter-name>
		<filter-class>com.baicizhan.talent.filter.LaunchFilter</filter-class>
		<load-on-startup>1</load-on-startup>
	</filter>


	<filter>
		<filter-name>loginfilter</filter-name>
		<filter-class>com.baicizhan.talent.filter.LoginFilter</filter-class>
	</filter>
	
	<filter>
		<filter-name>prepare</filter-name>
		<filter-class>com.baicizhan.talent.filter.PrepareFilter</filter-class>
	</filter>
	<filter>
		<filter-name>permission</filter-name>
		<filter-class>com.baicizhan.talent.filter.PermissionFilter
		</filter-class>
	</filter>
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>org.apache.struts2.dispatcher.FilterDispatcher
		</filter-class>
	</filter>
	
 	<servlet>
		<description></description>
		<display-name>InitialServlet</display-name>
		<servlet-name>initialServlet</servlet-name>
		<servlet-class>com.baicizhan.talent.servlet.InitServlet</servlet-class>
		<load-on-startup>3</load-on-startup>
	</servlet> 


	<servlet>
		<display-name>上传文件servlet</display-name>
		<servlet-name>upload</servlet-name>
		<servlet-class>com.baicizhan.talent.servlet.UploadServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>upload</servlet-name>
		<url-pattern>/upload</url-pattern>
	</servlet-mapping>
	
	<filter-mapping>
		<filter-name>launch</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>prepare</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>


	<!-- 30天 60*24*30 -->
	<session-config>
		<session-timeout>43200</session-timeout>
	</session-config>

</web-app>
